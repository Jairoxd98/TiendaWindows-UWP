                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbTelefono" Text="Telefono:" TextWrapping="Wrap" FontSize="25"/>
                <TextBox x:Name="tbTelefono" Text="658874559" TextWrapping="Wrap" FontSize="20" Width="140" FontWeight="Normal" Height="40" IsReadOnly="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0.004"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbTarjeta" Text="Tarjeta:" TextWrapping="Wrap" FontSize="25"/>
                <TextBox x:Name="tbTarjeta" Text="****0013" TextWrapping="Wrap" FontSize="20" Width="140" Height="40" IsReadOnly="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbDirecion" Text="Direción:" TextWrapping="Wrap" FontSize="25"/>
                <TextBox x:Name="tbDireccion" Text="C/Rosas 14" TextWrapping="Wrap" FontSize="20" Width="140" Height="40" IsReadOnly="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0.018"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbLocalidad" Text="Localidad:" TextWrapping="Wrap" FontSize="25"/>
                <TextBox x:Name="tbLocalidad" Text="Madrid" TextWrapping="Wrap" FontSize="20" Width="140" Height="40" IsReadOnly="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbPais" Text="País:" TextWrapping="Wrap" FontSize="25"/>
