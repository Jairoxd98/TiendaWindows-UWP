                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbVIP" Text="VIP:" TextWrapping="Wrap" FontSize="25"/>
                <TextBox x:Name="tbVIP" Text="SI" TextWrapping="Wrap" FontSize="20" Width="140" Height="40" IsReadOnly="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>

            </GridView>
        </Grid>
    </Frame>

</Page>
