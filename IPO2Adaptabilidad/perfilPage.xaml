                <TextBox x:Name="tbNombre" Text="Roberto" TextWrapping="Wrap" FontSize="20" Width="140" FontWeight="Normal" Height="40" IsReadOnly="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF108CF3" Offset="0"/>
                            <GradientStop Color="#FFFBFAFA" Offset="0"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                </TextBox>
                <TextBlock x:Name="lbApellidos" Text="Apellidos:" TextWrapping="Wrap" FontSize="25"/>
